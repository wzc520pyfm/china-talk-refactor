<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_reg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ui.reset_password.RestPasswordActivity">

    <ImageView
        android:id="@+id/resetPwdPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bg_pink_grad" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="260dp"
        android:layout_height="278dp"
        android:layout_marginTop="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/resetPwdPeople"
        app:layout_constraintEnd_toEndOf="@+id/resetPwdPeople"
        app:layout_constraintStart_toStartOf="@+id/resetPwdPeople"
        app:layout_constraintTop_toTopOf="@+id/resetPwdPeople"
        app:srcCompat="@drawable/bg_pink" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="260dp"
        android:layout_height="172dp"
        android:layout_marginTop="104dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView21"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView21"
        app:layout_constraintTop_toTopOf="@+id/resetPwdPeople"
        app:srcCompat="@drawable/bg_pink_shadow" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="286dp"
        android:layout_height="286dp"
        app:layout_constraintBottom_toBottomOf="@+id/resetPwdPeople"
        app:layout_constraintEnd_toEndOf="@+id/imageView21"
        app:layout_constraintStart_toStartOf="@+id/imageView21"
        app:layout_constraintTop_toTopOf="@+id/imageView21"
        app:srcCompat="@drawable/login_img" />

